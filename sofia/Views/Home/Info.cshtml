@model sofia.ViewModels.ItemViewModel;
@{
    ViewData["Title"] = "Info";
}
    <div id="man">
        <div class="container">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photos[0]))" alt="First slide">
                    </div>
                    @for (int i = 1; i < Model.Photos.Count(); i++)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photos[i]))" alt="Second slide">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <hr />
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="mt-4">Название: @Model.Home.Name</h3>
                    <h3 class="mt-4">Описание :</h3>
                    <h5>@Model.Home.About</h5>
                    <h3 class="mt-4">Цена: @Model.Home.Price рублей</h3>

                    @if (Model.Home.TypeSdelki != null)
                    {
                        <h3 class="mt-4">Тип сделки: @Model.Home.TypeSdelki</h3>
                    }
                    @if (Model.Home.TypeArenda != null)
                    {
                        <h3 class="mt-4">Тип аренды: @Model.Home.TypeArenda </h3>
                    }
                    @if (Model.Home.TypeCommerce != null)
                    {
                        <h3 class="mt-4">Тип Недвижимости: @Model.Home.TypeCommerce</h3>
                    }
                    @if (Model.Home.ObjectText != null)
                    {
                        <h3 class="mt-4">Объект: @Model.Home.ObjectText</h3>
                    }
                    @if (Model.Home.ObjectText != null)
                    {
                        <h3 class="mt-4">Комнат в аренду: @Model.Home.ObjectText</h3>
                    }
                    @if (Model.Home.PloshadRoom != null)
                    {
                        <h3 class="mt-4">Площадь комнаты м2: @Model.Home.PloshadRoom</h3>
                    }
                    @if (Model.Home.AllPloshadRoom != null)
                    {
                        <h3 class="mt-4">Общая площадь м2: @Model.Home.AllPloshadRoom</h3>
                    }
                    @if (Model.Home.Etag != null)
                    {
                        <h3 class="mt-4">Этаж: @Model.Home.Etag из @Model.Home.EtagAll</h3>
                    }
                    @if (Model.Home.Kuxnya != null)
                    {
                        <h3 class="mt-4">Кухня м2: @Model.Home.Kuxnya</h3>
                    }
                    @if (Model.Home.Balkon != null)
                    {
                        <h3 class="mt-4">Балкон м2: @Model.Home.Balkon</h3>
                    }
                    @if (Model.Home.SanUzelRazdel != null)
                    {
                        <h3 class="mt-4">раздельные санузлы: @Model.Home.SanUzelRazdel</h3>
                    }
                    @if (Model.Home.SanUzelVmeste != null)
                    {
                        <h3 class="mt-4">Совмещенные санузлы: @Model.Home.SanUzelVmeste</h3>
                    }
                    @if (Model.Home.Animals != null)
                    {
                        <h3 class="mt-4">Можно с животными: @Model.Home.Animals</h3>
                    }
                    @if (Model.Home.Children != null)
                    {
                        <h3 class="mt-4">Можно с детьми: @Model.Home.Children</h3>
                    }
                    @if (Model.Dop != null)
                    {
                        <h3 class="mt-4">Дополнительно:</h3>
                        @foreach (string text in Model.Dop)
                        {
                            <h5 class="mt-2">@text</h5>
                        }

                    }
                    @if (Model.Home.Communal != null)
                    {
                        <h3 class="mt-4">Коммунальные платежи включены: @Model.Home.Communal</h3>
                    }
                    @if (Model.Home.Predoplata != null)
                    {
                        <h3 class="mt-4">Предоплата: @Model.Home.Predoplata</h3>
                    }
                    @if (Model.Home.Zalog != null)
                    {
                        <h3 class="mt-4">Залог: @Model.Home.Zalog</h3>
                    }
                    @if (Model.Home.Sostav != null)
                    {
                        <h3 class="mt-4">Предпочительный состав жильцов: @Model.Home.Sostav</h3>
                    }


                </div>
            </div>
        </div>
        
    </div>

<script src="https://cdn.jsdelivr.net/npm/vue"></script>


